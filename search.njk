permalink: search.json
---
{"search" : [
{%- for item in collections.shortbits -%}
  {
    "url" : "{{ item.url }}",
    "title" : "{{ item.data.title }}",
    {% set content = (item.data.title + " " + item.templateContent) %}
    "text" : "{{ content | squash }}"
  }{% if not loop.last %},{% else %}{%- endif -%}
{%- endfor -%},
{%- for item in collections.posts -%}
  {
    "url" : "{{ item.url }}",
    "title" : "{{ item.data.title }}",
    {% set content = (item.data.title + " " + item.templateContent) %}
    "text" : "{{ content | squash }}"
  }{% if not loop.last %},{% else %}{%- endif -%}
{%- endfor -%}
]}